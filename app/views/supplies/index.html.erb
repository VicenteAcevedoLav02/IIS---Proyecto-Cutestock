<style>
  .inline-btn {
    display: inline-block;
  }
</style>

<h1 class="text-center">Stocks for supplies of <%= @business.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Type1</th>
      <th>Type2</th>
      <th>Type3</th>
      <th>Stock</th>
      <th>Cost</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.id %></td>
        <td><%= supply.tipo1 || "No type declared." %></td>
        <td><%= supply.tipo2 || "No type declared." %></td>
        <td><%= supply.tipo3 || "No type declared." %></td>
        <td><%= supply.stock %></td>
        <td><%= supply.cost %></td>
        <td>
          <button class="btn btn-dark">View</button>
          <%= link_to 'Edit', edit_supply_path(supply), class: 'btn btn-dark' %> <!-- Enlace agregado -->
          <div class='d-inline-block'>
            <%= button_to 'Delete', supply_path(supply), method: 'delete', class: 'btn btn-dark' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Create new Supply', new_supply_path, class: 'btn btn-dark' %> <!-- Enlace agregado -->