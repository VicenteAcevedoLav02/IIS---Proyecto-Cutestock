<h1 class="text-center">Creating supply <%= @next_supply_id %> for <%= @business.name %></h1>

<%= form_with model: @supply, url: supplies_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Supply Name" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :tipo1, "Type" %>
    <%= form.text_field :tipo1, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :tipo2, "Color" %>
    <%= form.text_field :tipo2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :tipo3, "Size" %>
    <%= form.select :tipo3, options_for_select(['None','XS', 'S', 'M', 'L', 'XL', 'XXL']), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cost, "Cost" %>
    <%= form.number_field :cost, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :stock, "Stock" %>
    <%= form.number_field :stock, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :requires, "Requires" %>
    <%= form.number_field :requires, class: "form-control", required: true %>
  </div>

  <%= form.submit "Create supply", class: "btn btn-dark" %>
<% end %>
