<h1>Order <%= @order.id %></h1>

<p>
  <strong>Price:</strong>
  <%= @order.price %>
</p>

<p>
  <strong>State:</strong>
  <%= @order.state %>
</p>

<h2>Products in this order:</h2>
<ul>
  <% @order.product_list.products.each do |product| %>
    <li><%= product.name %> - <%= product.price %></li>
  <% end %>
</ul>

<%= link_to 'Edit this Order', edit_order_path(@order), class: 'btn btn-dark' %>
<%= link_to 'Back to Orders', orders_path, class: 'btn btn-dark' %>
