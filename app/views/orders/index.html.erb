<h1 class="text-center">Â¡Welcome, <%= @business.name %>!</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Products</th>
      <th>Price</th>
      <th>State</th>
      <th>Actions</th>
     </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>
          <ul>
            <% @product_lists.each do |product_list| %>
              <% product_list.products.each do |product| %>
                <% if product_list.order_id == order.id %>
                  <li><%= product.name %></li>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </td>
        <td><%= order.price %></td>
        <td><%= order.state %></td>
        <td>
          <%= link_to 'View', order_path(order), class: 'btn btn-dark' %> <!-- Enlace al show -->
          <%= link_to 'Edit', edit_order_path(order), class: 'btn btn-dark' %>
          <div class='d-inline-block'>
            <%= button_to 'Delete', order_path(order), method: 'delete', class: 'btn btn-dark' %>
          </div>

          <% if order.state == 'Pending' %>
            <%= link_to 'Progress state', progress_order_path(order), class: 'btn btn-dark' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create new Order', new_order_path, class: 'btn btn-dark' %> <!-- Enlace agregado -->
